<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.LinkSaver" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/round_close_24</item>
    </style>

    <style name="Theme.LinkSaver" parent="Base.Theme.LinkSaver" />

    <style name="Theme.customSplash" parent="Theme.SplashScreen">
        <item name="backgroundColor">?attr/colorSurface</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.LinkSaver</item>
    </style>
</resources>